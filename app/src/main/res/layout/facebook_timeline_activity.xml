<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unblast"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toTopOf="@id/profile_image"
            android:layout_marginStart="12dp"
            />
        <TextView
            android:id="@+id/hour_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hrs"
            android:textColor="#6F6E6E"
            app:layout_constraintStart_toStartOf="@id/text_view"
            app:layout_constraintTop_toBottomOf="@id/text_view"
            android:fontFamily="sans-serif-thin"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/earth_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/earth"
            app:layout_constraintStart_toEndOf="@id/hour_text_view"
            app:layout_constraintTop_toBottomOf="@id/text_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"

            />
        <TextView
            android:id="@+id/text2_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buckle up, because change is coming to WordPress"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            app:layout_constraintStart_toStartOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/link_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://unblast.com/color/schemes"
            android:autoLink="web"
            android:fontFamily="sans-serif-medium"
            android:textColor="#5098F2"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/text2_view"
            app:layout_constraintTop_toBottomOf="@id/text2_view"
            />
        <View
            android:id="@+id/yellow_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            android:background="#FFC501"
            app:layout_constraintTop_toBottomOf="@id/link_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            />
        <LinearLayout
            android:id="@+id/buttons_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yellow_image"
            >
            <LinearLayout
                android:id="@+id/like_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Like"
                    android:textColor="#A2A2A2"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="8dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Comment"
                    android:textColor="#A2A2A2"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/share"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Share"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#A2A2A2"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>